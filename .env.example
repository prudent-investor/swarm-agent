# Application
APP_NAME=Agent Workflow
APP_VERSION=0.1.0
APP_PORT=8000

# OpenAI / LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Retrieval Augmented Generation
RAG_ENABLED=true
RAG_TOP_K=5
RAG_MIN_SCORE=0.5
RAG_MAX_CONTEXT_CHARS=8000
RAG_CACHE_TTL_SECONDS=300
RAG_DIAGNOSTICS_ENABLED=false
RAG_ADMIN_ENABLED=false
RAG_MAX_PAGES=5
RAG_MAX_DEPTH=1
RAG_REQUEST_TIMEOUT=10.0
RAG_REQUEST_INTERVAL=1.0
RAG_CHUNK_SIZE=1200
RAG_CHUNK_OVERLAP=200

# Web Search
WEB_SEARCH_ENABLED=false
WEB_SEARCH_PROVIDER=serpapi
WEB_SEARCH_API_KEY=

# Support experience
SUPPORT_FAQ_ENABLED=true
SUPPORT_FAQ_SCORE_THRESHOLD=0.65
SUPPORT_TICKETS_PERSIST_TO_FILE=false
SUPPORT_TICKETS_FILE_PATH=data/support/tickets.json
SUPPORT_ESCALATION_AUTO=false
SUPPORT_PII_MASKING_ENABLED=true
SUPPORT_MAX_RESPONSE_CHARS=1200
SUPPORT_CATEGORY_TERMS_OVERRIDES=
SUPPORT_SEVERITY_TERMS_OVERRIDES=

# Guardrails
GUARDRAILS_ENABLED=true
GUARDRAILS_MODE=balanced
MAX_INPUT_CHARS=4000
MAX_OUTPUT_CHARS=3000
NORMALIZE_REMOVE_ACCENTS=true
ANTI_INJECTION_ENABLED=true
MODERATION_ENABLED=true
GUARDRAILS_REDIRECT_ALWAYS=false

# Slack / Handoff
SLACK_ENABLED=true
SLACK_MODE=mock
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_DEFAULT_CHANNEL=#support-escalations
SLACK_AGENT_ENABLED=true
SLACK_CHANNEL_DEFAULT=support-humans
HANDOFF_CONFIRM_TTL_SECONDS=300

# Redirect service
REDIRECT_ENABLED=true
REDIRECT_CONFIDENCE_THRESHOLD=0.3

# Observability & platform
METRICS_ENABLED=true
LOG_FORMAT=json
CORRELATION_ID_HEADER=X-Correlation-ID
READINESS_ENABLED=true
READINESS_CPU_THRESHOLD=90
READINESS_MEMORY_THRESHOLD_MB=1024

# Frontend CORS
FRONTEND_ALLOWED_ORIGINS=http://localhost:5173

